# ImperioCasino Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==============================================================================
# Flask Configuration
# ==============================================================================
FLASK_ENV=development
# Options: development, production

# ==============================================================================
# Security - CRITICAL: Generate a strong secret key
# ==============================================================================
# Generate using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# ==============================================================================
# Database Configuration
# ==============================================================================
# Development (SQLite)
DATABASE_URI=sqlite:///app.db

# Production (PostgreSQL - RECOMMENDED)
# DATABASE_URI=postgresql://imperio_user:YOUR_PASSWORD@localhost/imperiocasino_prod

# Database Pool Settings
DB_POOL_SIZE=10
# For PostgreSQL in production, increase to 20
DB_MAX_OVERFLOW=10
# Maximum overflow connections beyond pool_size
DB_POOL_RECYCLE=3600
# Recycle connections after 1 hour (3600 seconds)

# ==============================================================================
# Redis Configuration (for rate limiting and caching)
# ==============================================================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
# Leave empty if no password set (development)
# Set strong password in production
REDIS_DB=0
# Redis database number (0-15)

# Rate Limiter Storage
# RATELIMIT_STORAGE_URL=memory://
# Automatically uses Redis in production, memory in development

# ==============================================================================
# Game Frontend URLs
# ==============================================================================
# Development
CHERRY_CHARM_URL=http://localhost:5173
BLACK_JACK_URL=http://localhost:5174
ROULETTE_URL=http://localhost:5175

# Production (example)
# CHERRY_CHARM_URL=https://slots.yourdomain.com
# BLACK_JACK_URL=https://blackjack.yourdomain.com
# ROULETTE_URL=https://roulette.yourdomain.com

# ==============================================================================
# CORS Origins (comma-separated, NO SPACES)
# ==============================================================================
# Development
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Production (example)
# CORS_ORIGINS=https://slots.yourdomain.com,https://blackjack.yourdomain.com,https://roulette.yourdomain.com

# ==============================================================================
# Session Configuration
# ==============================================================================
SESSION_COOKIE_SECURE=False
# CRITICAL: Set to True in production when using HTTPS

# ==============================================================================
# Logging
# ==============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Use INFO or WARNING in production

# ==============================================================================
# Gunicorn Configuration (Production)
# ==============================================================================
GUNICORN_WORKERS=4
# Number of worker processes (2-4 x CPU cores)
GUNICORN_LOG_LEVEL=info
# Options: debug, info, warning, error, critical
PORT=5000
# Application port

# ==============================================================================
# Backup Configuration (Optional)
# ==============================================================================
# BACKUP_DIR=/var/backups/imperiocasino
# RETENTION_DAYS=30
# S3_BACKUP_BUCKET=your-backup-bucket
# AWS credentials should be set via AWS CLI or environment

# ==============================================================================
# Notification Webhooks (Optional)
# ==============================================================================
# DEPLOY_NOTIFICATION_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# BACKUP_NOTIFICATION_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# HEALTH_CHECK_URL=http://localhost:5000/health

# ==============================================================================
# Frontend Configuration (for frontend apps)
# ==============================================================================
# Development
REACT_APP_SERVER_URL=http://localhost:5000
VITE_API_URL=http://localhost:5000

# Production (example)
# REACT_APP_SERVER_URL=https://api.yourdomain.com
# VITE_API_URL=https://api.yourdomain.com
