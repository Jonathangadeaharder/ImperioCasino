# ImperioCasino Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Flask Configuration
FLASK_ENV=development
# Options: development, production

# Security - CRITICAL: Generate a strong secret key
# You can generate one using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Database
DATABASE_URI=sqlite:///app.db
# For production, consider PostgreSQL: postgresql://user:password@localhost/imperiocasino
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600

# Game Frontend URLs
CHERRY_CHARM_URL=http://13.61.3.232:5173
BLACK_JACK_URL=http://13.61.3.232:5174
ROULETTE_URL=http://13.61.3.232:5175

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://13.61.3.232:5173,http://13.61.3.232:5174,http://13.61.3.232:5175

# Session Configuration
SESSION_COOKIE_SECURE=False
# Set to True in production when using HTTPS

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Server Configuration (for frontend apps)
REACT_APP_SERVER_URL=http://13.61.3.232:5000
VITE_API_URL=http://13.61.3.232:5000
